<theme>
<formatVersion>7</formatVersion>

<customView name="grid3" inherits="grid" displayName="Grid (Alternate)">

<imagegrid name="gamegrid">
      <margin>0.005 0</margin>
      <pos>0.0025 0.165</pos>
      <size>0.760 0.75</size>
      <padding>0.01 0.0 0.02 0.0</padding>
      <autoLayout>5 2</autoLayout>
      <animateSelection>false</animateSelection>
      <centerSelection>false</centerSelection>
      <scrollbarColor>454545</scrollbarColor>
      <scrollbarCorner>0.49</scrollbarCorner>
      <scrollbarSize>0.0045</scrollbarSize>
	  <scrollbarAlignment>left</scrollbarAlignment>
</imagegrid>
 
<gridtile name="default">
      <backgroundColor>FFFFFF00</backgroundColor>
      <backgroundCornerSize>9 9</backgroundCornerSize>
      <selectionMode>image</selectionMode>
      <padding>6 6</padding>
      <imageColor>FFFFFFB0</imageColor>
</gridtile>

<gridtile name="selected">
      <backgroundCenterColor>051222</backgroundCenterColor>
      <backgroundEdgeColor>${baseColour}</backgroundEdgeColor>
      <imageColor>FFFFFFFF</imageColor>
</gridtile>


<image name="md_marquee">
<storyboard event="activateNext">
       <animation property="opacity" from="0" to="1" duration="600" mode="easeOut"/>
      </storyboard>
      <storyboard event="activatePrev">
       <animation property="opacity" from="0" to="1" duration="600" mode="easeOut"/>
      </storyboard>
      <storyboard event="deactivateNext">
       <animation property="opacity" to="0" duration="600" mode="easeOut"/>
      </storyboard>
      <storyboard event="deactivatePrev">
       <animation property="opacity" to="0" duration="600" mode="easeOut"/>
      </storyboard>
</image>


<image name="sidebar" extra="true">
	<path>./../art/bar.png</path>
	<pos>0.75 0.160</pos>
	<size>0.500 0.771</size>
</image>
 
<video name="md_video">
	<maxSize>0.30 0.30</maxSize>
	<pos>0.875 0.36</pos>
	<origin>0.5 0.5</origin>
	<delay>0</delay>
	<roundCorners>0.05</roundCorners>
	<showSnapshotNoVideo>true</showSnapshotNoVideo>
</video>

<text name="md_description">
      <pos>0.760 0.54</pos>
      <size>0.232 0.34</size>
	  <color>FFFFFF</color>
	  <forceUppercase>0</forceUppercase>
      <fontPath>./../fonts/Cabin-Regular.ttf</fontPath>
      <fontSize>0.019</fontSize>
	  <alignment>center</alignment>
</text>

</customView>

</theme>
